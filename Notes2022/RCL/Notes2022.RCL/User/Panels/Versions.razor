<h4>Versions:</h4>

@if (Headers == null)
{
    <span>Loading...</span>
}
else
{
    if (Headers.Count == 0)
    {
        <strong>No versions</strong>
    }
    foreach ( NoteHeader Header in Headers)
    {
        <NotePanel NoteId="@Header.Id" IsMini="true" IsRootNote="false" ShowButtons="false" ShowChild="false" Vers="@Header.Version"></NotePanel>
    }
}

