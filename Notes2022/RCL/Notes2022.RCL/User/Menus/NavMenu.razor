<span class="clockcolor">@mytime &nbsp;</span>
<div class="top-row ps-4 navbar">
    <SfMenu Items="@menuItemsTop" @ref="@topMenu" CssClass="e-std-menu" >
            <MenuEvents TValue="MenuItem" ItemSelected="@OnSelect" ></MenuEvents>
    </SfMenu>
    <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>    
</div>
