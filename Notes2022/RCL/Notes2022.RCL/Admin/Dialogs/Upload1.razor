<div class="dialogs">
    <p>Enter file name to upload:</p>
    <input type="text" @bind-value="@filename" class="medium-input" />
    <br /><br />
    <button type="button" @onclick="Ok" class="btn btn-success btn-sm">Ok</button>
    <button type="button" @onclick="Cancel" class="btn btn-info btn-sm">Cancel</button>
</div>


@code {
    [CascadingParameter] public BlazoredModalInstance ModalInstance { get; set; }
    public string filename { get; set; }

    private void Ok()
    {
        ModalInstance.CloseAsync(ModalResult.Ok(filename));
    }

    private void Cancel()
    {
        ModalInstance.CancelAsync();
    }
}
